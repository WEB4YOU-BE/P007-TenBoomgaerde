generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  relationMode      = "prisma"
}

model User {
  id         Int     @id @default(autoincrement())
  email      String  @unique
  password   String
  name       String?
  adres      String?
  postalcode Int?
  City       String?
  phone      String?
  roleId     Int?
  role       Role?   @relation(fields: [roleId], references: [id])

  @@index([roleId])
}

model Role {
  id   Int    @id @default(autoincrement())
  name String
  User User[]
}
